# PhotoRAG Knowledge Graph System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI API Configuration
# =============================================================================

# OpenAI API Key (Required for AI analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model Selection
# Options: gpt-4.1-nano (default), gpt-4o-mini, gpt-3.5-turbo
OPENAI_MODEL=gpt-4.1-nano

# Google AI API Key (Optional - for higher accuracy analysis)
# Get your key from: https://makersuite.google.com/
GOOGLE_API_KEY=your-google-ai-key-here

# Google AI Model Selection
# Options: gemini-2.5-flash (recommended), gemini-1.5-flash, gemini-1.5-pro
GOOGLE_MODEL=gemini-2.5-flash

# =============================================================================
# Server Configuration
# =============================================================================

# Server Port (default: 3015)
PORT=3015

# Environment Mode
# Options: development, production
NODE_ENV=development

# =============================================================================
# Database Configuration (Optional - for advanced features)
# =============================================================================

# ArangoDB Connection
ARANGODB_URL=http://localhost:8529
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=your_secure_password
ARANGODB_DATABASE=knowledge_graph

# =============================================================================
# Performance & Limits
# =============================================================================

# Maximum file size for uploads (in bytes)
# Default: 50MB (52428800 bytes)
MAX_FILE_SIZE=52428800

# Enable caching (true/false)
ENABLE_CACHE=true

# Log level
# Options: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# Advanced Configuration
# =============================================================================

# API Rate Limits (requests per minute)
OPENAI_RATE_LIMIT=60
GOOGLE_RATE_LIMIT=100

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1000

# AI Model Settings
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000
GOOGLE_TEMPERATURE=0.2
GOOGLE_MAX_OUTPUT_TOKENS=2048

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Origins (comma-separated)
# Default: http://localhost:3000,http://localhost:3005,http://127.0.0.1:3005
CORS_ORIGINS=http://localhost:3000,http://localhost:3005,http://127.0.0.1:3005

# Session Secret (for production)
SESSION_SECRET=your-super-secret-session-key-here

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode
DEBUG=true

# Enable hot reload for development
HOT_RELOAD=true

# =============================================================================
# Production Configuration
# =============================================================================

# Redis URL (for production caching)
# REDIS_URL=redis://localhost:6379

# SSL Configuration (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Enable performance monitoring
ENABLE_MONITORING=true

# Analytics tracking (optional)
# ANALYTICS_ID=your-analytics-id

